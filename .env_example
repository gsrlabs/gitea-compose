# ======================================
# ОСНОВНЫЕ НАСТРОЙКИ ПРОЕКТА
# ======================================
PROJECT_NAME="gitea"
PROJECT_DISPLAY_NAME="Gitea"

# Доменное имя для Gitea (ЗАМЕНИТЕ!)
DOMAIN_NAME="gitea.your-domain.com"

# Порт gitea
GITEA_PORT="3000"

# Порт SSH для Git операций
SSH_PORT="2224"

# ======================================
# ПУТИ К ДАННЫМ
# ======================================
# Абсолютный путь к директории проекта (ЗАМЕНИТЕ!)
PROJECT_DIR="/home/your/directory/gitea"

# Путь к данным приложения Gitea
DATA_DIR="${PROJECT_DIR}/data"

# Путь к данным PostgreSQL
POSTGRES_DATA_DIR="${PROJECT_DIR}/postgres_data"

# Путь для хранения бэкапов
BACKUP_DIR="${PROJECT_DIR}/backups"

# ======================================
# НАСТРОЙКИ БАЗЫ ДАННЫХ
# ======================================
# Пароль для пользователя PostgreSQL (ЗАМЕНИТЕ!)
POSTGRES_PASSWORD="STRONG_PASSWORD"

# Пароль для подключения Gitea к БД (ЗАМЕНИТЕ!)
GITEA_DB_PASSWORD="STRONG_PASSWORD"

# Имя пользователя и базы данных
POSTGRES_USER="gitea"
POSTGRES_DB="gitea"

# ======================================
# НАСТРОЙКИ ДОКЕР
# ======================================
# Команда Docker Compose (docker-compose или docker compose)
COMPOSE_CMD="docker compose"

# Файл docker-compose.yml
COMPOSE_FILE="docker-compose.yml"

# Версия образов
GITEA_IMAGE="gitea/gitea:latest"
POSTGRES_IMAGE="postgres:14"

# ======================================
# НАСТРОЙКИ БЭКАПА
# ======================================
# Сколько дней хранить бэкапы (0 - хранить все)
BACKUP_RETENTION_DAYS=30

# Включать ли данные PostgreSQL в бэкап
BACKUP_POSTGRES=true

# Включать ли данные Gitea в бэкап
BACKUP_GITEA=true

# ======================================
# ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ GITEA
# ======================================
# Базовый URL (не менять, вычисляется из DOMAIN_NAME)
GITEA_SERVER_ROOT_URL="https://${DOMAIN_NAME}/"

# Домен для SSH клонов (не менять)
GITEA_SERVER_DOMAIN="${DOMAIN_NAME}"

# Блокировка установочного мастера после первой настройки
GITEA_SECURITY_INSTALL_LOCK="true"

# UID/GID пользователя внутри контейнера
USER_UID="1000"
USER_GID="1000"